-- UI_Library.lua
local Library = {}

-- Создать ScreenGui
function Library:CreateScreenGui(name, parent)
    local gui = Instance.new("ScreenGui")
    gui.Name = name or "CustomUI"
    gui.ResetOnSpawn = false
    gui.Parent = parent or game.Players.LocalPlayer:WaitForChild("PlayerGui")
    return gui
end

-- Создать Frame (окно)
function Library:CreateFrame(parent, size, position, bgColor)
    local frame = Instance.new("Frame")
    frame.Size = size or UDim2.new(0, 400, 0, 300)
    frame.Position = position or UDim2.new(0.5, -200, 0.5, -150)
    frame.BackgroundColor3 = bgColor or Color3.fromRGB(30, 30, 30)
    frame.BorderSizePixel = 2
    frame.BorderColor3 = Color3.fromRGB(0, 0, 0)
    frame.Parent = parent
    return frame
end

-- Сделать окно перетаскиваемым
function Library:MakeDraggable(frame, dragHeight)
    local UIS = game:GetService("UserInputService")
    local dragging, dragStart, startPos
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 and input.Position.Y < frame.AbsolutePosition.Y + (dragHeight or 40) then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)
    frame.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    frame.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
end

-- Создать Label
function Library:CreateLabel(parent, text, size, pos, textSize, color, font)
    local lbl = Instance.new("TextLabel")
    lbl.Size = size or UDim2.new(0, 100, 0, 30)
    lbl.Position = pos or UDim2.new(0, 10, 0, 10)
    lbl.BackgroundTransparency = 1
    lbl.Text = text or "Label"
    lbl.TextColor3 = color or Color3.fromRGB(255, 255, 255)
    lbl.TextSize = textSize or 18
    lbl.Font = font or Enum.Font.Gotham
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.Parent = parent
    return lbl
end

-- Создать TextBox
function Library:CreateTextBox(parent, default, size, pos)
    local tb = Instance.new("TextBox")
    tb.Size = size or UDim2.new(0, 100, 0, 30)
    tb.Position = pos or UDim2.new(0, 120, 0, 10)
    tb.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    tb.Text = default or ""
    tb.TextColor3 = Color3.fromRGB(0, 0, 0)
    tb.TextSize = 18
    tb.Font = Enum.Font.Gotham
    tb.Parent = parent
    return tb
end

-- Создать кнопку
function Library:CreateButton(parent, text, size, pos, color, textColor)
    local btn = Instance.new("TextButton")
    btn.Size = size or UDim2.new(0, 100, 0, 30)
    btn.Position = pos or UDim2.new(0, 10, 0, 50)
    btn.BackgroundColor3 = color or Color3.fromRGB(255, 0, 0)
    btn.Text = text or "Button"
    btn.TextColor3 = textColor or Color3.fromRGB(255, 255, 255)
    btn.TextSize = 18
    btn.Font = Enum.Font.GothamBold
    btn.Parent = parent
    return btn
end

return Library
